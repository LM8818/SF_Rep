# Banking NLP System - Environment Variables Template
# Скопируйте этот файл в .env и настройте под свое окружение

# Application Settings
APP_NAME=Banking NLP System
VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Database Configuration (если используется)
DATABASE__HOST=localhost
DATABASE__PORT=5432
DATABASE__USERNAME=postgres
DATABASE__PASSWORD=your_password_here
DATABASE__DATABASE=banking_nlp

# Security Settings
SECURITY__SECRET_KEY=your-super-secret-key-here-change-in-production
SECURITY__ALGORITHM=HS256
SECURITY__TOKEN_EXPIRE_MINUTES=30

# ML Model Configuration
ML__MODEL_NAME=DeepPavlov/rubert-base-cased
ML__MAX_LENGTH=512
ML__BATCH_SIZE=16
ML__CONFIDENCE_THRESHOLD=0.85

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Optional: External Services
# REDIS_URL=redis://localhost:6379
# ELASTICSEARCH_URL=http://localhost:9200
